{
  "name": "river-rat-marine-construction",
  "version": "1.0.0",
  "description": "This is a business website for river-rat-mc",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production ? npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdu830/river-rat-mc"
  },
  "author": "mdu830",
  "license": "GPL-3.0 license",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "express": "^4.18.2",
    "nodemon": "^2.0.22"
  }
}